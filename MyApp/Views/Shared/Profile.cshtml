<li class="dropdown messages-menu">
    <a href="@Url.Action("ToggleLanguage","Base")" class="dropdown-toggle">
        @{
            if (MyApp.Controllers.BaseController.CurrentLanguage == "km")
            {
                <img src="~/Pictures/en_flag.png" class="user-image img-circle" alt="User Image">
                <span class="hidden-xs">@Resource.En</span>
            }
            else
            {
                <img src="~/Pictures/km_flag.png" class="user-image img-circle" alt="User Image">
                <span class="hidden-xs">@Resource.Km</span>
            }
        }
    </a>
</li>


@model MyApp.Models.ChangeNewPassword
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_LogInLayout.cshtml";
}



<div class="login-box">
    @*<div class="login-logo">
        <a href="/Dashboard/Dashboardv1">New password</a>
    </div>*@
    <h2 class="text-center">Change a new password</h2>
    <!-- /.login-logo -->
    <div class="login-box-body">
        <p class="login-box-msg">Input your new password</p>
        @using (Html.BeginForm("ChangePassword", "User", FormMethod.Post, new { role = "form", name = "frmLogin" }))
        {
            @Html.AntiForgeryToken()


            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })

            <div class="form-group has-feedback">
                @Html.TextBoxFor(m => m.NewPassword, new { @class = "form-control", @placeholder = "New Password" })
                <span class="fa fa-key form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm Password" })
                <span class="fa fa-lock form-control-feedback"></span>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Change Password</button>
                </div>
                <!-- /.col -->
            </div>
        }
       
    </div>
    <!-- /.login-box-body -->
</div>
